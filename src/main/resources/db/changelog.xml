<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="maxuz">
        <createTable tableName="grandchild">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tid" type="varchar(50)">
                <constraints unique="true"/>
            </column>
        </createTable>
        <createTable tableName="reg_stage">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="stage" type="varchar(10)"/>
            <column name="grandchild_id" type="integer">
                <constraints nullable="false"
                             foreignKeyName="fk_grandchild_stage"
                             references="grandchild(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
